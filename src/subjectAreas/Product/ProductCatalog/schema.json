{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "oneOf": [
    {
      "$ref": "#/definitions/ProductCatalog"
    },
    {
      "$ref": "#/definitions/ProductCatalogTranslation"
    },
    {
      "$ref": "#/definitions/ProductCategory"
    },
    {
      "$ref": "#/definitions/ProductCategoryAttributeSet"
    },
    {
      "$ref": "#/definitions/ProductCategoryProduct"
    },
    {
      "$ref": "#/definitions/ProductCategoryTranslation"
    }
  ],
  "definitions": {
    "ProductCategoryAttributeSet": {
      "type": "object",
      "required": [
        "id",
        "attributeSet",
        "productCategory"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "attributeSet": {
          "type": "string"
        },
        "productCategory": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCategory"
          }
        }
      }
    },
    "ProductCatalog": {
      "type": "object",
      "required": [
        "activeFromDate",
        "id",
        "name"
      ],
      "properties": {
        "activeToDate": {
          "type": "string",
          "format": "date"
        },
        "activeFromDate": {
          "type": "string",
          "format": "date"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "ProductCategoryTranslation": {
      "type": "object",
      "required": [
        "id",
        "translatedName",
        "productCategory"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "translatedName": {
          "type": "string"
        },
        "productCategory": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCategory"
          }
        }
      }
    },
    "ProductCategory": {
      "type": "object",
      "required": [
        "productCatalog",
        "id",
        "activeFromDate",
        "name"
      ],
      "properties": {
        "productCatalog": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCatalog"
          }
        },
        "id": {
          "type": "string"
        },
        "activeFromDate": {
          "type": "string",
          "format": "date"
        },
        "activeToDate": {
          "type": "string",
          "format": "date"
        },
        "name": {
          "type": "string"
        },
        "parentCategory": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCategory"
          }
        }
      }
    },
    "ProductCatalogTranslation": {
      "type": "object",
      "required": [
        "id",
        "productCatalog",
        "translatedName"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "productCatalog": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCatalog"
          }
        },
        "translatedName": {
          "type": "string"
        }
      }
    },
    "ProductCategoryProduct": {
      "type": "object",
      "required": [
        "product",
        "id",
        "activeFromDateTime",
        "productCategory"
      ],
      "properties": {
        "product": {
          "type": "array",
          "items": {
            "$ref": "../Product/schema.json#/definitions/Product"
          }
        },
        "id": {
          "type": "string"
        },
        "activeFromDateTime": {
          "type": "string",
          "format": "time"
        },
        "activeToDateTime": {
          "type": "string",
          "format": "time"
        },
        "productCategory": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductCategory"
          }
        }
      }
    }
  }
}
